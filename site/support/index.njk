{%- for section in collections.support -%}
{%- if section.data.draft !== true -%}
{% set svgClass = "m-auto my-4 h-12 sm:h-24 sm:my-6 lg:h-auto lg:m-0 aspect-square " + section.data.headerClasses %}
<section class="my-8 border-t-2 lg:border-t-0">
<h2 class="text-2xl font-bold my-8 sm:text-3xl lg:text-5xl" id="{{ section.fileSlug }}">{{section.data.title}}</h2>
  <div class="notes">
    {{ section.templateContent | safe  }}
  </div>
  {%- for post in section.data.children -%}
  <article class="my-4" itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
  {%- if section.data.postImage == 'svg-fileSlug' %}
  <div class="contents lg:block lg:bg-gradient-to-t lg:from-sandy-500 lg:to-apple-500 lg:h-48 lg:aspect-square lg:p-6 lg:rounded-xl lg:my-4">
  {% svg post.fileSlug, svgClass  %}
  </div>
  {%- endif %}
  <h3 itemprop="name" id="{{ post.fileSlug }}" class="{{section.data.headerClasses}} font-medium text-xl lg:text-3xl my-2 sm:text-2xl">{{ post.data.title }}</h3>
    <div class="notes" itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer">
      <span itemprop="text">
        {{ post.templateContent | safe  }}
      </span
    </div>
  </article>
  {%- endfor %} 
</section>
{%- endif -%}
{%- endfor %} 
</div>